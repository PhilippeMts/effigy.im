{
  "hosting": {
    "public": "site/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/a/**",
        "function": "avatar"
      },
      {
        "source": "/token/**",
        "function": "displayToken"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
